#include <iostream>

using namespace std;

void strcpy (char *dst, const char *src)
{
	while (*src != NULL)
		{*dst = *src;
		++dst;
		++src;
		}
	*dst = *src;
}
int main ()
{	char str1[6] = "hello";
	char str2[6] = "apple";
	strcpy (str1, str2); 
	cout << str1 << endl;
	cout << str2 << endl;
// str1 array now holds "apple"
}
